/*********************** FOOTER ***********************/

footer {
	background-color: #333;
	color: #cacaca;
	position: relative;
	top: 100px;
	height: 200px;
	width: 100%;
	text-align: center;
	line-height: 1.2em;
	font-size: 0.8em;
}

#footer-top {
	border: 4px solid orange;
	height: 100px;
}

#footer-top ul {
	display: inline-block;
	margin-right: 60px;
}

#footer-top ul#moreinfo {
	vertical-align: top;
}

footer li#siren, footer li#loi {
	font-size: 0.8em;
}

#footer-middle {
	border: 4px solid green;
}

#footer-image img {
	position: absolute;
	margin-top: -210px;
	margin-left: 270px;
}

#footer-bottom {
	border: 4px solid yellow;
}

footer a {
	text-decoration: none;
	color: #759120;
}





